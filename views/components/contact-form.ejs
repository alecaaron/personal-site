          <label for="email">Email</label>
          <input id="email" type="email" name="email" required/>
        </span>

      </div><!--end user info input-->

      <span class="form-field form-user-message">
        <label for="message">Message</label>
        <textarea id="message" placeholder="Write your message" name="message" required></textarea>
      </span>
    </section>
    <button type="submit" id="form-submit" class="btn-white btn-lrg">Send Message</button>
  </form>
  </div>
